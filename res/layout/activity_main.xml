<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.app_fitness.MainActivity" >
    
	
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login" />
    <EditText 
        android:layout_width="fill_parent" 
        android:layout_height="40dp" 
        android:hint="Entrez votre login" 
        android:id="@+id/edit" 
        android:background="@drawable/skintext"
        android:drawableLeft="@drawable/user"
        android:paddingLeft="10dp"
        android:drawablePadding="10dp"
       /> 
    
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="password" 
        android:layout_marginTop="10dp"/>
    <EditText 
        android:layout_width="fill_parent" 
        android:layout_height="40dp" 
        android:hint="Entrez votre password" 
        android:inputType="textPassword"
        android:id="@+id/edit1"
        android:paddingLeft="10dp"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/password"
        android:background="@drawable/skintext"
        /> 

        
        <Button 
            
            android:layout_width="fill_parent" 
            android:layout_height="40dp" 
            android:text="connecter" 
            android:id="@+id/connection"
            android:layout_marginTop="40dp"
            android:background="@drawable/skinbutton" />
        
        <Button 
            android:layout_width="match_parent" 
            android:layout_height="40dp" 
            android:text="S'inscrire" 
            android:id="@+id/inscrire" 
            android:layout_marginTop="20dp"
            android:background="@drawable/skinbutton"/>
        
</LinearLayout>
